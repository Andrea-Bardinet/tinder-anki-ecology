{% extends 'base.html.twig' %}

{% block title %}Card{% endblock %}

{% block body %}
    <h1>Card</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ card.id }}</td>
            </tr>
            <tr>
                <th>Question</th>
                <td>{{ card.question }}</td>
            </tr>
            <tr>
                <th>Answer</th>
                <td>{{ card.answer ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Explanation</th>
                <td>{{ card.explanation }}</td>
            </tr>
            <tr>
                <th>Sources</th>
                <td>{{ card.sources }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_card_index') }}">back to list</a>

    <a href="{{ path('app_card_edit', {'id': card.id}) }}">edit</a>

    {{ include('card/_delete_form.html.twig') }}
{% endblock %}
